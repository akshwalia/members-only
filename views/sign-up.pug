extends layout 

block content 
    h1 Sign Up 

    form(method='POST' action='')
        .form-group 
            label(for='first_name') First Name: 
            input#first_name.form-control(type='text' name='first_name' placeholder='Enter first name' value=user? user.first_name : '')
        .form-group 
            label(for='last_name') Last Name: 
            input#last_name.form-control(type='text' name='last_name' placeholder='Enter last name' value=user? user.last_name : '')
        div.form-group
            label(for='username') Username: 
            input#username.form-control(type='text' name='username' placeholder='Enter username' value=user? user.username : '')
        div.form-group
            label(for='password') Password: 
            input#password.form-control(type='password' name='password' placeholder='Enter password')
        input.btn.btn-primary(type='submit' value='Submit')
    
    if errors 
        ul 
            for error in errors 
                li!= error.msg